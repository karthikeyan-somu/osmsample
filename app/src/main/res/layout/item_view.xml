<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"><![CDATA[

        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/sign"
        android:maxHeight="@android:dimen/thumbnail_height"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:adjustViewBounds="true" />

    ]]>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        android:maxHeight="80dp"
        android:maxWidth="@android:dimen/thumbnail_width"
        android:adjustViewBounds="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/job_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/job_image"
        android:layout_alignParentEnd="true"
        android:textSize="20dp" />
        android:layout_toStartOf="@+id/job_Address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Address :"
        android:id="@+id/job_Address"
        android:layout_below="@+id/job_name"
        android:layout_toRightOf="@+id/job_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email :"
        android:id="@+id/job_email"
        android:layout_below="@+id/job_Address"
        android:layout_toRightOf="@+id/job_image"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Gender :"
        android:id="@+id/job_gender"
        android:layout_below="@+id/job_email"
        android:layout_toRightOf="@+id/job_image"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
